@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Sistema Inventario y Control de Medicamentos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <script src="~/lib/angularjs/angular.js"></script>
    <script src="~/angularjs/globalapp.js"></script>
    <script src="~/angularjs/globalwebang.js"></script>

    <script src="~/angularjs/viewmodels/homeController.js"></script>
    <script src="~/angularjs/services/homeModel.js"></script>

    <link href="~/css/StylePDF.css" rel="stylesheet" />
    <link href="~/css/StyleLogin.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/SweetAlert2.0.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("form").keypress(function (e) {
                if (e.which == 13) {
                    return false;
                }
            });
        });
    </script>
    <script src="~/js/jquery.backstretch.min.js"></script>
</head>
<body ng-app="multiAngular" ng-controller="homeController" ng-cloak>
    <div class="splash-container">
        <div class="card">
            <div class="card-header text-center">
                <img class="logo-img" src="~/content/Imgs/logo.png">
            </div>
            <div class="card-body">
                <form name="formLogin" novalidate>
                    <div class="form-group">
                        <input class="form-control form-control-lg" ng-model="Usuarioview.Username" name="username" id="username" type="text" placeholder="Usuario" autocomplete="off"  ng-required="true">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" ng-model="Usuarioview.Password"  name="password" id="password" type="password" placeholder="Contraseña" ng-required="true">
                    </div>
                    <button type="submit" ng-click="IniciarSesion(formLogin.$valid);" class="btn btn-primary btn-lg btn-block">Entrar</button>
                </form>
            </div>
            <div class="card-footer bg-white p-0  ">
            </div>
        </div>
    </div>
</body>
<script>
    var screen = urlPortal + "content/imgs/background1.png";
    $.backstretch(screen, { speed: 850 });
</script>
</html>