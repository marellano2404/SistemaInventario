@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/angularJs/globalwebang.js"></script>
<script src="~/angularjs/viewmodels/almacencontroller.js"></script>
<script src="~/angularJs/services/almacenModel.js"></script>
<link href="~/css/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<div ng-controller="almacenController" ng-init="CargarInventarioAlmacen();" ng-cloak>
    <p>&nbsp;</p>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <hr />
                <h2 class="text-danger">
                    Inventario de Almacen
                </h2>
            </div>
            <div class="card-body card-block">                
                <div>
                    <form novalidate name="formBusqueda">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="firstName" class="control-label mb-4">Opciónes de Busqueda </label>
                                <div class="form-group">
                                    <div class="form-check-inline form-check">
                                        <label for="inline-radio1" class="form-check-label ">
                                            <input type="radio" id="inline-radio1" ng-model="Tipo" name="Tipo" value="nombre" class="form-check-input" ng-required="true">Nombre
                                        </label>
                                        <label for="inline-radio2" class="form-check-label ">
                                            <input type="radio" id="inline-radio2" ng-model="Tipo" name="Tipo" value="codigo" class="form-check-input" ng-required="true">CodigoBarras
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="firstName" class="control-label mb-1">Nombre </label>
                                    <input type="text" class="form-control" placeholder="Ingrese codigo ó nombre" name="nombrevalor" id="nombrevalor" ng-required="true" ng-maxlength="60" ng-model="Valor" />
                                </div>
                                <span class="MensajeErrorDatosCombo" data-ng-show="formBusqueda.nombrevalor.$error.required">Información Requerida</span>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="firstName" class="control-label mb-1">&nbsp; </label>
                                    <button class="btn btn-brand btn-lg btn-block" ng-click="buscarProductoInventario(formBusqueda.$valid)" type="submit">Buscar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <hr class="mb-4">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered ListaRegistroTable">
                        <caption>
                            A R T I C U L O S &nbsp;&nbsp; A L M A C E N
                            <a href="">
                                <img ng-click="mostrarReporte()" title="Bajar Reporte" src="~/Content/icons/PlantillasMenu.png" />
                            </a>
                        </caption>
                        <thead>
                            <tr>
                                <th class="ListaTh">#</th>
                                <th>Clave Producto</th>
                                <th>Codigo Barras</th>
                                <th class="ListaTh">Producto</th>
                                <th class="ListaTh">Tipo</th>
                                <th>Tipo Unidad</th>
                                <th class="ListaTh">Cant x Uni</th>
                                <th>Cantidad</th>
                                <th>Existencias</th>
                                <th>Laboratorio</th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="B in ArticulosInventarioVM | orderBy:'descripcion'">
                            <tr>
                                <td class="ListaTd">{{$index+1}}.-</td>
                                <td>{{B.claveProducto}}</td>
                                <td class="ListaTd">{{B.codigoBarras}}</td>
                                <td>{{B.descripcion}}</td>
                                <td>{{B.tipoCatalogo}}</td>
                                <td class="ListaTd">{{B.unidad}}</td>
                                <td>{{B.cantidadPorUnidad}}</td>
                                <td>{{B.cantidad}}</td>
                                <td>{{B.existenciasUnidad}}</td>
                                <td>{{B.laboratorio}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <div data-ng-include="Modal"></div>
</div>